#include <iostream>
#include <string>

#include "Money.h"
#include "Time.h"

using namespace std;

int main() {

	//input time, number

	string number;
	int h1, h2, m1, m2;

	cout << "Please enter your car number: (EX: ABC-1234)" << endl;
	cin >> number;
	cout << endl;

	cout << "Please enter your starting time: (Hours:00~23 / Minutes:00~59)" << endl;
	cin >> h1 >> m1;
	cout << endl;

	cout << "Please enter your leaving time: (Hours:00~23 / Minutes:00~59)" << endl;
	cin >> h2 >> m2;
	cout << endl;

	//class Time
	Time t1;
	Time t2;
	Time t;

	t1.setHour1(h1);
	t1.setMintue1(m1);

	t2.setHour2(h2);
	t2.setMintue2(m2);

	//output number, total fee and time
	cout << "------------------------------------------" << endl;
	cout << endl;
	cout << "Your car number : " << number << endl;

	t.countTime(h1,h2,m1,m2);
	t.countTimeMoney(h1, h2, m1, m2);
	
	//class Money
	Money c1;
	c1.countMoney(t.countTimeMoney(h1, h2, m1, m2));

	return 0;
}
