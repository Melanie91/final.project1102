	cout << endl;

	cout << "Please enter your starting time: (Hours:00~23 / Minutes:00~59)" << endl;
	cin >> h1 >> m1;

	cout << endl;

	cout << "Please enter your leaving time: (Hours:00~23 / Minutes:00~59)" << endl;
	cin >> h2 >> m2;

	Time t1;
	Time t2;
	Time t;

	t1.setHour1(h1);
	t1.setMintue1(m1);

	t2.setHour2(h2);
	t2.setMintue2(m2);

	cout << endl;
	cout << "------------------------------------------" << endl;
	cout << endl;
	cout << "Your car number : " << number << endl;

	t.countTime(h1,h2,m1,m2);
	t.countTimeMoney(h1, h2, m1, m2);
	
	Money c1;
	c1.countMoney(t.countTimeMoney(h1, h2, m1, m2));

}
